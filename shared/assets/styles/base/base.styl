img {
  display: block;
  max-width: 100%;
  height: auto !important;
}

a {
  color: white;
  text-decoration: none;
}

p {
  margin: 1.25em 0;
}

input:-webkit-autofill {
  -webkit-box-shadow: 0 0 0 1000px white inset !important;
}

input[type="text"] {
  border-radius: none;
}

h1 {
  font-weight: normal;
}

